    <!-- tsParticles + AOS -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // AOS
        AOS.init({
          duration: 800,
          once: true,
          easing: "ease-out-cubic"
        });

        // Scroll progress
        const scrollProgress = document.getElementById("scroll-progress");
        function updateScrollProgress() {
          const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          const docHeight = document.documentElement.scrollHeight - window.innerHeight;
          const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
          scrollProgress.style.width = progress + "%";
        }
        window.addEventListener("scroll", updateScrollProgress);
        updateScrollProgress();

        // Languages progress animation
        const languageSection = document.getElementById("languages");
        if (languageSection) {
          const observer = new IntersectionObserver(
            entries => {
              entries.forEach(entry => {
                if (entry.isIntersecting) {
                  document.querySelectorAll(".lang-bar__fill").forEach(bar => {
                    const targetWidth = bar.dataset.targetWidth || 0;
                    bar.style.width = targetWidth + "%";
                  });
                  observer.disconnect();
                }
              });
            },
            { threshold: 0.3 }
          );
          observer.observe(languageSection);
        }

        // Interactive tagline switcher
        const taglineEl = document.querySelector(".interactive-tagline");
        const tagPills = document.querySelectorAll(".tagline-toggle .pill");
        tagPills.forEach(pill => {
          pill.addEventListener("click", () => {
            tagPills.forEach(p => p.classList.remove("pill--active"));
            pill.classList.add("pill--active");
            const msg = pill.getAttribute("data-message");
            if (msg && taglineEl) {
              taglineEl.classList.add("text-fade-out");
              setTimeout(() => {
                taglineEl.textContent = msg;
                taglineEl.classList.remove("text-fade-out");
                taglineEl.classList.add("text-fade-in");
                setTimeout(() => taglineEl.classList.remove("text-fade-in"), 300);
              }, 150);
            }
          });
        });

        // tsParticles config with themes
        function getParticlesConfig(theme) {
          const base = {
            fullScreen: { enable: true, zIndex: -1 },
            background: { color: "#050816" },
            fpsLimit: 60,
            interactivity: {
              events: {
                onHover: { enable: true, mode: "grab" },
                onClick: { enable: true, mode: "push" },
                resize: true
              },
              modes: {
                push: { quantity: 3 },
                repulse: { distance: 100, duration: 0.4 }
              }
            },
            detectRetina: true
          };

          if (theme === "playful") {
            return Object.assign({}, base, {
              particles: {
                number: { value: 80, density: { enable: true, area: 800 } },
                color: { value: ["#0d6efd", "#6610f2", "#20c997", "#f8d210"] },
                links: {
                  enable: true,
                  distance: 140,
                  color: "#9ca3af",
                  opacity: 0.5,
                  width: 1
                },
                move: {
                  enable: true,
                   speed: 1.8,
                  direction: "none",
                  random: true,
                  outModes: { default: "bounce" }
                },
                opacity: { value: 0.7 },
                size: { value: { min: 1, max: 5 } },
                shape: { type: ["circle", "triangle"] }
              }
            });
          }

          if (theme === "minimal") {
            return Object.assign({}, base, {
              particles: {
                number: { value: 35, density: { enable: true, area: 1000 } },
                color: { value: "#6b7280" },
                links: {
                  enable: true,
                  distance: 160,
                  color: "#4b5563",
                  opacity: 0.35,
                  width: 0.7
                },
                move: {
                  enable: true,
                  speed: 0.8,
                  direction: "none",
                  random: true,
                  outModes: { default: "out" }
                },
                opacity: { value: 0.4 },
                size: { value: { min: 1, max: 3 } },
                shape: { type: "circle" }
              }
            });
          }

          // Calm (default)
          return Object.assign({}, base, {
            particles: {
              number: { value: 60, density: { enable: true, area: 900 } },
              color: { value: ["#0d6efd", "#6610f2", "#20c997"] },
              links: {
                enable: true,
                distance: 130,
                color: "#6c757d",
                opacity: 0.45,
                width: 1
              },
              move: {
                enable: true,
                speed: 1.2,
                direction: "none",
                random: true,
                outModes: { default: "bounce" }
              },
              opacity: { value: 0.5 },
              size: { value: { min: 1, max: 4 } },
              shape: { type: "circle" }
            }
          });
        }

        let currentTheme = "calm";
        if (window.tsParticles) {
          tsParticles.load("tsparticles", getParticlesConfig(currentTheme));
        }

        const particleThemeButtons = document.querySelectorAll(".particles-toggle .pill");
        particleThemeButtons.forEach(btn => {
          btn.addEventListener("click", () => {
            const theme = btn.getAttribute("data-theme") || "calm";
            currentTheme = theme;
            particleThemeButtons.forEach(b => b.classList.remove("pill--active"));
            btn.classList.add("pill--active");
            if (window.tsParticles) {
              tsParticles.load("tsparticles", getParticlesConfig(currentTheme));
            }
          });
        });

        // Smooth scroll
        function smoothScrollTo(targetId) {
          const target = document.getElementById(targetId);
          if (!target) return;
          const offsetTop = target.offsetTop - 70;
          window.scrollTo({ top: offsetTop, behavior: "smooth" });
        }

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener("click", evt => {
            const targetId = anchor.getAttribute("href").substring(1);
            if (document.getElementById(targetId)) {
              evt.preventDefault();
              smoothScrollTo(targetId);
            }
          });
        });

        // Side nav dots
        const sections = document.querySelectorAll("section[data-section-id]");
        const dots = document.querySelectorAll(".side-nav__dot");

        dots.forEach(dot => {
          dot.addEventListener("click", () => {
            const target = dot.getAttribute("data-target");
            if (target) smoothScrollTo(target);
          });
        });

        const sectionObserver = new IntersectionObserver(
          entries => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                const id = entry.target.getAttribute("data-section-id");
                dots.forEach(dot => {
                  dot.classList.toggle("side-nav__dot--active", dot.getAttribute("data-target") === id);
                });
              }
            });
          },
          { threshold: 0.4 }
        );

        sections.forEach(sec => sectionObserver.observe(sec));

        // Lightbox for gallery
        const lightbox = document.getElementById("lightbox");
        const lightboxImg = document.getElementById("lightboxImg");
        const galleryCards = document.querySelectorAll(".gallery-card");

        galleryCards.forEach(card => {
          card.addEventListener("click", () => {
            const img = card.querySelector("img");
            if (!img || !lightbox || !lightboxImg) return;
            lightboxImg.src = img.src;
            lightboxImg.alt = img.alt || "";
            lightbox.classList.add("lightbox--visible");
            lightbox.setAttribute("aria-hidden", "false");
          });
        });

        if (lightbox) {
          lightbox.addEventListener("click", evt => {
            if (evt.target === lightbox || evt.target.classList.contains("lightbox__close")) {
              lightbox.classList.remove("lightbox--visible");
              lightbox.setAttribute("aria-hidden", "true");
            }
          });
        }

        // Simple dropdown for downloads
        const dropdownButton = document.querySelector(".dropdown-button");
        const dropdownMenu = document.querySelector(".dropdown-menu");
        if (dropdownButton && dropdownMenu) {
          dropdownButton.addEventListener("click", () => {
            dropdownMenu.classList.toggle("dropdown-menu--open");
          });
          document.addEventListener("click", evt => {
            if (!dropdownButton.contains(evt.target) && !dropdownMenu.contains(evt.target)) {
              dropdownMenu.classList.remove("dropdown-menu--open");
            }
          });
        }
      });
    </script>
  </body>
