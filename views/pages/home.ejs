  <!-- Vendor JS: tsParticles + AOS -->
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Initialize AOS (scroll animations)
      AOS.init({
        duration: 800,
        once: true,
        easing: "ease-out-cubic"
      });

      // Language bar animation on scroll (using data-target-width)
      const languageSection = document.querySelector("#languages");
      if (languageSection) {
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              document.querySelectorAll("#languages .progress-bar").forEach(bar => {
                const targetWidth = bar.dataset.targetWidth || 0;
                bar.style.width = targetWidth + "%";
              });
              observer.disconnect(); // run once
            }
          });
        }, { threshold: 0.3 });

        observer.observe(languageSection);
      }

      // tsParticles hero background
      if (window.tsParticles) {
        tsParticles.load("tsparticles", {
          fullScreen: { enable: false },
          background: { color: "transparent" },
          fpsLimit: 60,
          interactivity: {
            events: {
              onHover: { enable: true, mode: "repulse" },
              onClick: { enable: true, mode: "push" },
              resize: true
            },
            modes: {
              push: { quantity: 3 },
              repulse: { distance: 100, duration: 0.4 }
            }
          },
          particles: {
            color: { value: ["#0d6efd", "#6610f2", "#20c997"] },
            links: {
              color: "#6c757d",
              distance: 120,
              enable: true,
              opacity: 0.4,
              width: 1
            },
            collisions: { enable: false },
            move: {
              direction: "none",
              enable: true,
              outModes: { default: "bounce" },
              random: true,
              speed: 1.2,
              straight: false
            },
            number: {
              density: { enable: true, area: 800 },
              value: 50
            },
            opacity: { value: 0.5 },
            shape: { type: "circle" },
            size: { value: { min: 1, max: 4 } }
          },
          detectRetina: true
        });
      }

      // Photo gallery modal using Bootstrap
      const modalElement = document.getElementById("photoModal");
      const modalImg = document.getElementById("photoModalImg");

      if (modalElement && modalImg && typeof bootstrap !== "undefined") {
        document.querySelectorAll(".photo-card").forEach(card => {
          card.addEventListener("click", () => {
            const img = card.querySelector("img");
            if (!img) return;
            modalImg.src = img.src;
            modalImg.alt = img.alt || "";
            const modal = new bootstrap.Modal(modalElement);
            modal.show();
          });
        });
      }

      // Smooth scroll for internal anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener("click", function (e) {
          const targetId = this.getAttribute("href").substring(1);
          const targetEl = document.getElementById(targetId);
          if (targetEl) {
            e.preventDefault();
            window.scrollTo({
              top: targetEl.offsetTop - 70,
              behavior: "smooth"
            });
          }
        });
      });
    });
  </script>
